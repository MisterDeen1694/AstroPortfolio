---
import { Image } from "astro:assets";
import Heading from "../ui/Heading.astro";
import Link from "../ui/Link.astro";

import Daisy from "@/assets/avatar.jpg";
---

<header aria-label="Introduction to Daisy" class="hero-not-found">
	<Image
		format="avif"
		alt="Baby Daisy"
		width={200}
		class="avatar"
		src={Daisy}
	/>
	<Heading size="h1" tagName="h2">Are you lost?</Heading>
	<p>
		Oops! The page you're looking for seems to have wandered off. Please try
		again or visit our homepage for more information.
	</p>
	<div>
		<Link href="#" variant="secondary">Download CV</Link>
		<Link href="/" variant="primary">Go Home</Link>
	</div>
</header>
